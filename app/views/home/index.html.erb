<div class="min-h-screen bg-gray-50" data-controller="dashboard">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-3 items-center py-6">
        <div class="flex justify-start">
          <div class="flex items-center space-x-3">
            <!-- Create new list input -->
            <input 
              type="text" 
              placeholder="Enter new list name..." 
              class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              data-dashboard-target="newListInput"
              data-action="keydown->dashboard#handleNewListKeydown">
            <button 
              data-action="click->dashboard#createNewList"
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
              Create
            </button>
          </div>
        </div>
        <div class="flex justify-center">
          <h1 class="text-3xl font-bold text-gray-900">To-dos</h1>
        </div>
        <div></div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Loading State -->
    <div data-dashboard-target="loadingState" class="text-center py-12">
      <div class="text-gray-500 text-lg">Loading tasks...</div>
    </div>

    <!-- Lists Container -->
    <div data-dashboard-target="listsContainer" class="space-y-4 hidden"></div>

    <!-- Empty State -->
    <div data-dashboard-target="emptyState" class="text-center py-12 hidden">
      <div class="text-gray-500 text-lg">No lists yet. Create your first list to get started!</div>
    </div>

    <!-- Error State -->
    <div data-dashboard-target="errorState" class="text-center py-12 hidden">
      <div class="text-red-500 text-lg">Error loading data. Please refresh the page.</div>
    </div>
  </main>
</div>
