<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div class="flex items-center space-x-4">
          <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <h1 class="text-2xl font-bold text-gray-900">Edit Task</h1>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-8">
        <%= form_with model: @task, local: true, html: { class: "space-y-6" } do |form| %>
          
          <!-- Task Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Task Name</label>
            <%= form.text_field :name, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter task name" %>
          </div>

          <!-- Assigned to -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Assigned to</label>
            <%= form.collection_select :assignee_id, @users, :id, :name, 
                { prompt: "Select a user", selected: @task.assignee_id },
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <!-- Due to -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Due to</label>
            <%= form.date_field :limit_date, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- When done, notify -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">When done, notify</label>
            <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-md p-3">
              <% @users.each do |user| %>
                <label class="flex items-center">
                  <%= check_box_tag "task[notify_to][]", user.id, 
                      @task.notify_to&.include?(user.id),
                      class: "h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500" %>
                  <span class="ml-2 text-sm text-gray-700"><%= user.name %> - <%= user.job_title %></span>
                </label>
              <% end %>
            </div>
            <p class="text-xs text-gray-500 mt-1">Select users to notify when this task is completed</p>
          </div>

          <!-- Notes -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Notes</label>
            <%= form.text_area :notes, 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Add any additional notes or details..." %>
          </div>

          <!-- Completed Status -->
          <div class="flex items-center">
            <%= form.check_box :completed, 
                class: "h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500" %>
            <label class="ml-2 text-sm text-gray-700">Mark as completed</label>
          </div>

          <!-- Form Actions -->
          <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to "Cancel", root_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <%= form.submit "Save Changes", 
                class: "px-4 py-2 bg-blue-600 border border-transparent rounded-md shadow-sm text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

        <% end %>
      </div>
    </div>
  </main>
</div>
